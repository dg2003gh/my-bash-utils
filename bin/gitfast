#!/usr/bin/env bash

#title       : gitfast
#description : A command to add, commit, push to a git repository.
#author      : Douglas Guimar√£es<dg2003gh@gmail.com>
#date        : 01-04-2024
#version     : 0.1.0
#GNU bash    : 5.2.21
#=======================================================

push_it=''

function _CHECK() {
    local path="$1"
    local message="$2"
    
    if (("$#" == 2)) && [[ -e $path ]]; then
            git add "$path"
            git commit -m "$message"
            [[ -n $push_it ]] && { git push; }
    else
        echo -e '\033[31mPlease, you must give a valid path and a message.\033[0m'
        exit 1
    fi
}

function _HELP() {
    echo \
    '
    Usage: gitall [file to be added] [commit message]

    -h|--help   Display this help.
    '
    exit 0
}

function OPTION_NOT_FOUND() {
    echo "-$1 is not a option. Please use gitfast -h to see the available options."
}

if ! type -p 'git' > /dev/null; then 
    echo -e '\033[31mGit was not found!\033[0m Please, install git to run this program.'
    exit 127
fi

while getopts 'hp' option; do 
    case $option in 
         h) _HELP                       ;;
         p) push_it='1'; shift          ;;
        \?) OPTION_NOT_FOUND $OPTARG    ;;
    esac
done 

_CHECK "$@"; 

